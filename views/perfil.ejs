<%- include('header') %>

    <div class="h-full bg-gray-900 flex-1 py-10 overflow-y-auto custom-scrollbar">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">

            <div class="md:flex md:items-center md:justify-between mb-8">
                <div class="flex-1 min-w-0">
                    <h2 class="text-2xl font-bold leading-7 text-white sm:text-3xl sm:truncate">
                        Configuración de Perfil
                    </h2>
                    <p class="mt-1 text-sm text-gray-400">
                        Personaliza cómo te ven los demás en las salas de chat.
                    </p>
                </div>
            </div>

            <!-- Edit Profile Card -->
            <div class="bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-700">
                <div class="px-4 py-5 sm:p-6">

                    <form action="/perfil" method="POST" enctype="multipart/form-data"
                        class="space-y-8 divide-y divide-gray-700">

                        <div class="space-y-6 sm:space-y-5">

                            <!-- Nombre de Usuario -->
                            <div
                                class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-700 sm:pt-5">
                                <label for="nomuser" class="block text-sm font-medium text-gray-300 sm:mt-px sm:pt-2">
                                    Nombre público
                                </label>
                                <div class="mt-1 sm:mt-0 sm:col-span-2">
                                    <input type="text" name="nomuser" id="nomuser"
                                        value="<%= user ? user.nomuser : '' %>" required
                                        class="max-w-lg block w-full shadow-sm focus:ring-brand-500 focus:border-brand-500 sm:max-w-xs sm:text-sm bg-gray-700 text-white border-gray-600 rounded-md py-2 px-3 border">
                                </div>
                            </div>

                            <!-- Avatar y Subida -->
                            <div
                                class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-center sm:border-t sm:border-gray-700 sm:pt-5">
                                <label for="profilePic" class="block text-sm font-medium text-gray-300">
                                    Foto de Perfil
                                </label>

                                <div class="mt-1 sm:mt-0 sm:col-span-2 flex items-center space-x-6">
                                    <!-- Avatar Actual -->
                                    <span
                                        class="h-16 w-16 rounded-full overflow-hidden bg-gray-700 border-2 border-gray-600 shadow-md">
                                        <img src="/uploads/<%= user.profilePic || 'default.png' %>"
                                            alt="Tu foto de perfil" class="h-full w-full object-cover">
                                    </span>

                                    <!-- Input Archivo -->
                                    <div>
                                        <div
                                            class="relative flex items-center justify-center p-2 border-2 border-dashed border-gray-600 rounded-md hover:border-brand-500 hover:bg-gray-750 transition-colors cursor-pointer focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-900 focus-within:ring-brand-500">
                                            <span
                                                class="text-sm font-medium text-brand-400 px-2 pointer-events-none">Cambiar
                                                imagen</span>
                                            <input type="file" id="profilePic" name="profilePic" accept="image/*"
                                                class="absolute inset-0 w-full h-full opacity-0 cursor-pointer">
                                        </div>
                                        <p class="mt-2 text-xs text-gray-400">JPG, PNG o GIF cuadrado hasta 2MB.</p>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="pt-5">
                            <div class="flex justify-end">
                                <a href="/chat-list"
                                    class="bg-gray-700 py-2 px-4 border border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-200 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-brand-500 transition-colors">
                                    Cancelar
                                </a>
                                <button type="submit"
                                    class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-brand-600 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition-colors">
                                    Guardar Cambios
                                </button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

    <%- include('footer') %>